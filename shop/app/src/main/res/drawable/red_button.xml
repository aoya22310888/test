<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 注意：有 state 的 item 要擺在前面 -->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff2e37" />
            <stroke
                android:width="1dp"
                android:color="#cc0200" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ff2e37"
                android:centerColor="#cc0200"
                android:endColor="#ff2e37"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#cc0200" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>